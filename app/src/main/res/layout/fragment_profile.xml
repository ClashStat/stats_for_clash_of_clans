<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.ProfileFragment">

    <TextView
        android:id="@+id/trophies_builder"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/home_village"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="189dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="146dp"
        android:text="Trophies:"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/versus_battles"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/home_village"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="257dp"
        android:layout_marginEnd="-4dp"
        android:layout_marginBottom="78dp"
        android:text="VS. Battles Won:"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/league_lvl"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/home_village"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="266dp"
        android:text="League Level:"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/builder_base"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/clan_badge_url"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="189dp"
        android:layout_marginEnd="-130dp"
        android:layout_toStartOf="@+id/level"
        android:text="Builder Base"
        android:textColor="#000000"
        android:textSize="45dp" />

    <TextView
        android:id="@+id/home_village"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/clan_badge_url"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="-134dp"
        android:layout_toStartOf="@+id/level"
        android:text="Home Village"
        android:textColor="#000000"
        android:textSize="45dp" />

    <TextView
        android:id="@+id/clan"
        android:layout_width="242dp"
        android:layout_height="63dp"
        android:layout_below="@+id/profile"
        android:layout_alignParentStart="true"
        android:layout_marginStart="166dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="-131dp"
        android:layout_toStartOf="@+id/level"
        android:text="CLAN"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/clan_rank"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_below="@+id/clan"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="166dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_toStartOf="@+id/level"
        android:text="CLAN RANK"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="0dp"
        android:text="Profile"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="50sp"
        android:textStyle="bold"
        android:fontFamily="@font/searn"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="78dp"
        android:layout_below="@+id/profile"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="-3dp"
        android:layout_toStartOf="@+id/level"
        android:text="USERNAME"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/level"
        android:layout_width="131dp"
        android:layout_height="76dp"
        android:layout_below="@+id/profile"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="3dp"
        android:background="@color/black"
        android:text="LEVEL"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/clan_badge_url"
        android:layout_width="164dp"
        android:layout_height="129dp"
        android:layout_alignTop="@+id/clan"
        android:layout_alignParentStart="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:src="@mipmap/ic_clan_foreground" />

    <TextView
        android:id="@+id/trophies"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/home_village"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-2dp"
        android:layout_marginBottom="337dp"
        android:text="Trophies:"
        android:textColor="#000000" />

</RelativeLayout>