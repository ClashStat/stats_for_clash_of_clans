<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.ProfileFragment">

    <TextView
        android:id="@+id/builder_base"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/home_village"
        android:layout_alignParentStart="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="-127dp"
        android:layout_toStartOf="@+id/level"
        android:text="BUILDER"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/home_village"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/clan"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="-126dp"
        android:layout_toStartOf="@+id/level"
        android:text="HOME"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/clan"
        android:layout_width="237dp"
        android:layout_height="132dp"
        android:layout_below="@+id/profile"
        android:layout_alignParentStart="true"
        android:layout_marginStart="166dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="-126dp"
        android:layout_toStartOf="@+id/level"
        android:text="CLAN"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="0dp"
        android:text="Profile"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="50sp"
        android:textStyle="bold"
        android:fontFamily="@font/searn"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="78dp"
        android:layout_below="@+id/profile"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="-3dp"
        android:layout_toStartOf="@+id/level"
        android:text="USERNAME"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/level"
        android:layout_width="131dp"
        android:layout_height="76dp"
        android:layout_below="@+id/profile"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="3dp"
        android:background="@color/black"
        android:text="LEVEL"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/clan_badge_url"
        android:layout_width="164dp"
        android:layout_height="129dp"
        android:layout_alignTop="@+id/clan"
        android:layout_alignParentStart="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:src="@mipmap/ic_clan_foreground" />
</RelativeLayout>