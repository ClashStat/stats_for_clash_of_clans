<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="5dp"
    tools:context=".fragments.AchievementFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/achievement_body"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/achievement_head"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="3dp"
        android:layout_toStartOf="@+id/ratingBar"
        android:fontFamily="@font/wellflett"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="19sp" />

    <View
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/black"
        android:visibility="visible"
        tools:visibility="visible" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="@style/Widget.AppCompat.RatingBar"
        android:layout_width="142dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="6dp"
        android:numStars="3"
        android:progressTint="#EC9E28"
        android:rating="2" />

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_below="@+id/achievement_body"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/ratingBar"
        android:text="TextView" />

</RelativeLayout>