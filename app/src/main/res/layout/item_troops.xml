<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/action_troop_name"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/action_troopicon"
        android:text="Troop Name"
        android:textColor="#AA0202"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/action_troop_level"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="372dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/action_troopicon"
        android:text="Troop Level"
        android:textColor="#1890C6"
        android:textSize="24sp" />

</RelativeLayout>